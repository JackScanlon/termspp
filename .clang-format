BasedOnStyle: LLVM
ColumnLimit: 120
AllowShortFunctionsOnASingleLine: InlineOnly
SortIncludes: true
IncludeBlocks: Regroup
IncludeCategories:
  - Regex: '^"(llvm|llvm-c|llvm-dialects|clang|clang-c)/'
    Priority: 5
  - Regex: '^(<|"(gtest|gmock|isl|json)/)'
    Priority: 4
  - Regex: '<[[:alnum:].]+>'
    Priority: 3
  - Regex: '.*/'
    Priority: 2
  - Regex: '.*'
    Priority: 1
